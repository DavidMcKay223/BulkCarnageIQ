<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

		<!-- Widget 1: Daily Totals -->
		<LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

			<TableLayout
				android:id="@+id/tableDailyMacros"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1" />

			<BulkCarnageIQ.Mobile.Components.Carnage.MacroDonutView
				android:id="@+id/dailyDonut"
				android:layout_width="240dp"
				android:layout_height="240dp"
				android:layout_marginStart="16dp"
				android:layout_gravity="center" />

		</LinearLayout>

		<!-- Widget 2: Weekly Summary -->
		<LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

			<TableLayout
				android:id="@+id/tableWeeklyMacros"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1" />

			<BulkCarnageIQ.Mobile.Components.Carnage.MacroDonutView
				android:id="@+id/weeklyDonut"
				android:layout_width="240dp"
				android:layout_height="240dp"
				android:layout_marginStart="16dp"
				android:layout_gravity="center" />

		</LinearLayout>

	</LinearLayout>
</ScrollView>
