<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<!-- Top app bar -->
	<RelativeLayout
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

		<TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

		<Button
            android:id="@+id/btn_hamburger"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/app_btn_hamburger_text"
            android:textSize="28sp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

	</RelativeLayout>

	<!-- Main content container below top bar -->
	<FrameLayout
        android:id="@+id/fragment_container"
        android:layout_below="@id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

	<!-- Hidden drawer panel -->
	<LinearLayout
        android:id="@+id/drawer_panel"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="#ff7043"
        android:orientation="vertical"
        android:translationX="-240dp"
        android:elevation="8dp">

		<Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_btn_home_text" />

		<Button
            android:id="@+id/btn_tracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_btn_tracker_text" />

	</LinearLayout>

</RelativeLayout>
